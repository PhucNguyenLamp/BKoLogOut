{
  "manifest_version": 3,
  "name": "Moodle Keep-Alive",
  "version": "1.0",
  "author": "Lamp",
  "description": "Keeps your Moodle session alive outside quizzes.",
  "permissions": ["tabs"],
  "host_permissions": ["https://*/hcmut.edu.vn/*"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
